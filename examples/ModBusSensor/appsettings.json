{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "systemd",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": false
      }
    }
  },
  "ModbusClient": {
    "Port": "COM3",
    "Parity": "None",
    "ReadTimeout": 5000
  },
  "InitialState": {
    "Root": {
      "TelemetryPeriod": "PT30S",
      "SerialNumber": "1234-5678"
    },
    "Info": {
      "manufacturer": "Example",
      "model": "Modbus Temperature/Humidity Monitor"
    },
    "Sensor_1": {
      "Address": 1
    },
    "Sensor_2": {
      "Address": 0
    }
  }
}
