{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/InfluxDbTemperatureController.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/InfluxDbTemperatureController.csproj",
                "/output:bin/out",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Set Module Tag",
            "type": "shell",
            "command": "./scripts/SetModuleTag.ps1",
            "dependsOn": [
                "publish"
            ]
        },
        {
            "label": "Build Container",
            "type": "shell",
            "command": "./scripts/Build.ps1",
            "dependsOn": [
                "Set Module Tag"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/InfluxDbTemperatureController.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}